---
interface Props {
	videoid: string;
	videotitle: string;
	videodesc: string;
}
const { videoid, videotitle, videodesc } = Astro.props;
---

<a class="youtube-card" href={`https://www.youtube.com/watch?v=${videoid}`} target="_blank">
	<span class="youtube-video-title">{videotitle}</span>
	<img src={`https://img.youtube.com/vi/${videoid}/maxresdefault.jpg`} alt={`${videotitle} preview image`} loading="lazy" decoding="async" />
	<span class="youtube-video-description">{videodesc}</span>
</a>

<style>
	.youtube-card {
		display: grid;
		max-width: 41rem;
		grid-template: auto 1fr / auto 1fr;
		height: 21rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		transition: box-shadow var(--theme-transition);
		
	}
	.youtube-card:hover {
		box-shadow: var(--shadow-md);
	}
	.youtube-video-title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: var(--text-lg);
		font-weight: 500;
	}
	.youtube-video-description {
		grid-row: 3;
		grid-column: 1;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: var(--text-sm);
		font-weight: 300;
	}
	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	@media (min-width: 50em) {
		.youtube-card {
			height: 22rem;
			border-radius: 1.5rem;
		}
		.youtube-video-title {
			border-radius: 0.9375rem;
		}
	}
</style>
